{
	"extends": [
		"tslint:latest",
		"tslint-config-prettier"
	],
	"linterOptions": {
		"exclude": [
			"node_modules/**/*"
		]
	},
	"rules": {
		"no-implicit-dependencies": [
			true,
			"dev"
		],
		"interface-name": [
			true,
			"never-prefix"
		],
		"member-access": [
			true,
			"no-public"
		],
		"no-empty-interface": false,
		"quotemark": [
			true,
			"single"
		],
		"ban-types": [
			false,
			[
				"Function",
				""
			]
		],
		"object-literal-sort-keys": false,
		"ordered-imports": false
	}
}